<h1>Listing Palpites</h1>

<table>
  <tr>
    <th>Id Palpite</th>
    <th>Id Jogo</th>
    <th>Id Usuario</th>
    <th>Gol Mandante</th>
    <th>Gol Visitante</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @palpites.each do |palpite| %>
  <tr>
    <td><%= palpite.id_palpite %></td>
    <td><%= palpite.id_jogo %></td>
    <td><%= palpite.id_usuario %></td>
    <td><%= palpite.gol_mandante %></td>
    <td><%= palpite.gol_visitante %></td>
    <td><%= link_to 'Show', palpite %></td>
    <td><%= link_to 'Edit', edit_palpite_path(palpite) %></td>
    <td><%= link_to 'Destroy', palpite, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

