<h1>Listing jogos</h1>

<table>
  <tr>
    <th>Id Jogo</th>
    <th>Time Mandante</th>
    <th>Time Visitante</th>
    <th>Gols Mandante</th>
    <th>Gols Visitante</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jogos.each do |jogo| %>
  <tr>
    <td><%= jogo.id_jogo %></td>
    <td><%= jogo.time_mandante %></td>
    <td><%= jogo.time_visitante %></td>
    <td><%= jogo.gols_mandante %></td>
    <td><%= jogo.gols_visitante %></td>
    <td><%= link_to 'Show', jogo %></td>
    <td><%= link_to 'Edit', edit_jogo_path(jogo) %></td>
    <td><%= link_to 'Destroy', jogo, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

