<h1>Todos os Jogos do campeonato:</h1>

<table>
  <tr>
    <th>Rodada</th>
    <th>Time mandante</th>
    <th>Time visitante</th>
    <th>Gols mandante</th>
    <th>Gols visitante</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jogos.each do |jogo| %>
  <tr>
    <td><%= jogo.id_jogo %></td>
    <td><%= jogo.time_mandante %></td>
    <td><%= jogo.time_visitante %></td>
    <td><%= jogo.gols_mandante %></td>
    <td><%= jogo.gols_visitante %></td>
    <td><%= link_to 'Visualizar', jogo %></td>
    <td><%= link_to 'Editar', edit_jogo_path(jogo) %></td>
    <td><%= link_to 'Apagar', jogo, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

